<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义TextView属性   -->
    <style name="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <!-- 自定义TextView属性   -->
    <style name="SelectTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!--自定义EditText-->
    <style name="EditText">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/linelayout_black_radion</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 自定义BaseButton属性   -->
    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="lineHeight">13dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <!--自定义MyTextView-->
    <style name="MyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 自定义横向分割线属性   -->
    <style name="HLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/theme_color</item>
<!--        <item name="android:layout_marginRight">5dp</item>-->
<!--        <item name="android:layout_marginLeft">5dp</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 自定义纵向分割线属性   -->
    <style name="Vine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/theme_color</item>
<!--        <item name="android:layout_marginRight">5dp</item>-->
<!--        <item name="android:layout_marginLeft">5dp</item>-->
    </style>

    <!-- 配置dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupBackground">@android:color/transparent </item>
        <item name="android:background">@android:color/transparent </item>
        <item name="android:windowBackground"> @android:color/transparent </item>
        <!-- <item name="android:backgroundDimEnabled">true</item> -->
    </style>

    <!--自定义Dialog Style-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 自定义Button控件的属性-->
    <declare-styleable name="BaseButton">
        <!-- 背景颜色-->
        <attr name="bg_color" format="color" />
        <!-- 圆角大小-->
        <attr name="bg_corner" format="dimension" />
        <!-- 是否可以点击-->
        <attr name="bg_client" format="boolean" />
    </declare-styleable>

    <!-- 自定义LinLayout控件的属性-->
    <declare-styleable name="BaseRelativeLayout">
        <!-- 背景颜色-->
        <attr name="bg_relative_color" format="color" />
        <!-- 圆角大小-->
        <attr name="bg_relative_corner" format="dimension" />
        <!-- 是否可以点击-->
        <attr name="bg_relative_client" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DrawerLin">
        <attr name="drawer_title" format="string" />
        <attr name="version" format="string" />
        <attr name="drawer_margin" format="dimension" />
        <attr name="drawer_image_left" format="reference" />
        <attr name="drawer_image_right" format="reference" />
    </declare-styleable>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="background">@color/theme_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <!--自定义radiobutton-->
    <style name="RadionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:textSize">11dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!--        <item name="android:layout_marginTop">10dp</item>-->
        <!--        <item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <!--        <item name="android:textColor">@color/radionbutton_select</item>-->
        <item name="android:textColor">@color/whith</item>
    </style>

    <!--自定义header属性-->
    <declare-styleable name="Header">
        <attr name="header_title" format="string" />
        <attr name="header_title_left" format="string" />
        <attr name="header_title_right" format="string" />
        <attr name="header_image_left" format="reference" />
        <attr name="header_image_right" format="reference" />
        <attr name="header_back_color" format="reference" />
        <attr name="header_iv_left_bg" format="reference" />
        <attr name="header_iv_right_bg" format="reference" />
        <attr name="header_is_title_visiable" format="boolean" />
        <attr name="header_is_left_iv_visiable" format="boolean" />
        <attr name="header_is_right_tv_visiable" format="boolean" />
        <attr name="header_is_right_iv_visiable" format="boolean" />
        <attr name="header_is_left_tv_visiable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseTitle">
        <attr name="text_header_title" format="string" />
        <attr name="text_header_is_title_visiable" format="boolean" />
        <attr name="text_header_is_left_iv_visiable" format="boolean" />
    </declare-styleable>

    <!--自定义myTextView属性-->
    <declare-styleable name="TitleTextView">
        <attr name="content_title" format="string" />
        <attr name="content_is_title_visiable" format="boolean" />
        <attr name="content_is_right_tv_visiable" format="boolean" />
    </declare-styleable>



</resources>
